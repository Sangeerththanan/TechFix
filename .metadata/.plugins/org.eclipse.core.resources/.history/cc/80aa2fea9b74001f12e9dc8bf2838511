package com.techfix.Service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;

import com.techfix.Model.Analytics;

@Service
public class AnalyticsService extends GenericService<Analytics, Long>{
	
	@Autowired
	private AnalyticsService service;
	
	// Retrieve all analytics reports
    @GetMapping
    public List<Analytics> getAllAnalytics() {
        return service.getAll();
    }

    // Retrieve specific analytics report by ID
    @GetMapping("/{id}")
    public Analytics getAnalyticsById(@PathVariable Long id) {
        return service.getById(id);
    }

    // Create a new analytics report
    @PostMapping
    public Analytics createAnalytics(@RequestBody Analytics analytics) {
        return service.create(analytics);
    }
}
